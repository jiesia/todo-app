{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
